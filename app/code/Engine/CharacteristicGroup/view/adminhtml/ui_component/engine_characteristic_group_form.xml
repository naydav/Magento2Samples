<?xml version="1.0"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">engine_characteristic_group_form.engine_characteristic_group_form_data_source</item>
            <item name="deps" xsi:type="string">engine_characteristic_group_form.engine_characteristic_group_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Characteristic Group Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">engine_characteristic_group_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">engine_characteristic_group/characteristicGroup/</item>
                <item name="sort_order" xsi:type="number">10</item>
            </item>
            <item name="reset" xsi:type="array">
                <item name="name" xsi:type="string">reset</item>
                <item name="label" xsi:type="string" translate="true">Reset</item>
                <item name="class" xsi:type="string">reset</item>
                <item name="on_click" xsi:type="string">location.reload();</item>
                <item name="sort_order" xsi:type="number">20</item>
            </item>
            <item name="delete" xsi:type="string">Engine\CharacteristicGroup\Ui\Component\Control\CharacteristicGroup\DeleteButton</item>
            <item name="save" xsi:type="string">Engine\CharacteristicGroup\Ui\Component\Control\CharacteristicGroup\SaveSplitButton</item>
        </item>
    </argument>
    <dataSource name="engine_characteristic_group_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Engine\CharacteristicGroup\Ui\DataProvider\CharacteristicGroupDataProvider</argument>
            <argument name="name" xsi:type="string">engine_characteristic_group_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">main_table.characteristic_group_id</argument>
            <argument name="requestFieldName" xsi:type="string">characteristic_group_id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">General</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="dataScope" xsi:type="string">general</item>
                <item name="sortOrder" xsi:type="number">100</item>
            </item>
        </argument>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="max_text_length" xsi:type="number">255</item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Title</item>
                    <item name="scopeLabel" xsi:type="string" translate="true">[STORE VIEW]</item>
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
        </field>
        <field name="backend_title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="max_text_length" xsi:type="number">255</item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Backend Title</item>
                    <item name="scopeLabel" xsi:type="string" translate="true">[GLOBAL]</item>
                    <item name="sortOrder" xsi:type="number">200</item>
                </item>
            </argument>
        </field>
        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="validation" xsi:type="array">
                        <item name="max_text_length" xsi:type="number">1000</item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="scopeLabel" xsi:type="string" translate="true">[STORE VIEW]</item>
                    <item name="sortOrder" xsi:type="number">300</item>
                </item>
            </argument>
        </field>
        <field name="is_enabled">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="label" xsi:type="string" translate="true">Is Enabled</item>
                    <item name="scopeLabel" xsi:type="string" translate="true">[GLOBAL]</item>
                    <item name="sortOrder" xsi:type="number">400</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="characteristics">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Characteristics</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="dataScope" xsi:type="string">characteristics</item>
                <item name="sortOrder" xsi:type="number">200</item>
            </item>
        </argument>
        <container name="assign_characteristic_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">container</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/components/group</item>
                    <item name="label" xsi:type="string"/>
                    <item name="dataScope" xsi:type="string"/>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="breakLine" xsi:type="boolean">false</item>
                </item>
            </argument>
            <container name="assign_characteristic_button">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="formElement" xsi:type="string">container</item>
                        <item name="component" xsi:type="string">Magento_Ui/js/form/components/button</item>
                        <item name="template" xsi:type="string">ui/form/components/button/container</item>
                        <item name="actions" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="targetName" xsi:type="string">engine_characteristic_group_form.engine_characteristic_group_form.characteristics.assign_characteristic_modal</item>
                                <item name="actionName" xsi:type="string">toggleModal</item>
                            </item>
                        </item>
                        <item name="title" xsi:type="string" translate="true">Assign Characteristic</item>
                        <item name="additionalForGroup" xsi:type="boolean">true</item>
                        <item name="additionalClasses" xsi:type="string">admin__field-medium</item>
                        <item name="dataScope" xsi:type="string"/>
                    </item>
                </argument>
            </container>
        </container>
        <dynamicRows name="assigned_characteristics">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Assigned Characteristics</item>
                    <item name="renderDefaultRecord" xsi:type="boolean">false</item>
                    <item name="component" xsi:type="string">Engine_MagentoFix/js/dynamic-rows/dynamic-rows-grid</item>
                    <item name="addButton" xsi:type="boolean">false</item>
                    <item name="recordTemplate" xsi:type="string">record</item>
                    <item name="dataScope" xsi:type="string"/>
                    <item name="dataProvider" xsi:type="string">data.characteristics.assign_characteristic_grid</item>
                    <item name="sortOrder" xsi:type="number">100</item>
                    <item name="map" xsi:type="array">
                        <item name="characteristic_id" xsi:type="string">characteristic_id</item>
                        <item name="title" xsi:type="string">title</item>
                        <item name="backend_title" xsi:type="string">backend_title</item>
                        <item name="is_enabled" xsi:type="string">is_enabled</item>
                    </item>
                    <item name="identificationProperty" xsi:type="string">characteristic_id</item>
                    <item name="identificationDRProperty" xsi:type="string">characteristic_id</item>
                    <item name="links" xsi:type="array">
                        <item name="insertData" xsi:type="string">${ $.provider }:${ $.dataProvider }</item>
                    </item>
                    <item name="dndConfig" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                    </item>
                    <item name="renderColumnsHeader" xsi:type="boolean">true</item>
                </item>
            </argument>
            <container name="record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="component" xsi:type="string">Magento_Ui/js/dynamic-rows/record</item>
                        <item name="positionProvider" xsi:type="string">characteristic_position</item>
                        <item name="dataScope" xsi:type="string"/>
                    </item>
                </argument>
                <field name="characteristic_id">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="formElement" xsi:type="string">input</item>
                            <item name="elementTmpl" xsi:type="string">ui/dynamic-rows/cells/text</item>
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="dataScope" xsi:type="string">characteristic_id</item>
                            <item name="fit" xsi:type="boolean">false</item>
                            <item name="label" xsi:type="string" translate="true">ID</item>
                        </item>
                    </argument>
                </field>
                <field name="characteristic_position">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="dataType" xsi:type="string">number</item>
                            <item name="formElement" xsi:type="string">input</item>
                            <item name="dataScope" xsi:type="string">characteristic_position</item>
                            <item name="visible" xsi:type="boolean">false</item>
                        </item>
                    </argument>
                </field>
                <field name="title">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="formElement" xsi:type="string">input</item>
                            <item name="elementTmpl" xsi:type="string">ui/dynamic-rows/cells/text</item>
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="dataScope" xsi:type="string">title</item>
                            <item name="componentType" xsi:type="string">field</item>
                            <item name="label" xsi:type="string" translate="true">Title</item>
                        </item>
                    </argument>
                </field>
                <field name="backend_title">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="formElement" xsi:type="string">input</item>
                            <item name="elementTmpl" xsi:type="string">ui/dynamic-rows/cells/text</item>
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="dataScope" xsi:type="string">backend_title</item>
                            <item name="componentType" xsi:type="string">field</item>
                            <item name="label" xsi:type="string" translate="true">Backend Title</item>
                        </item>
                    </argument>
                </field>
                <field name="is_enabled">
                    <argument name="data" xsi:type="array">
                        <item name="options" xsi:type="object">Magento\Config\Model\Config\Source\Yesno</item>
                        <item name="config" xsi:type="array">
                            <item name="formElement" xsi:type="string">select</item>
                            <item name="component" xsi:type="string">Magento_Ui/js/form/element/select</item>
                            <item name="dataScope" xsi:type="string">is_enabled</item>
                            <item name="label" xsi:type="string" translate="true">Is Enabled</item>
                            <item name="disabled" xsi:type="boolean">true</item>
                        </item>
                    </argument>
                </field>
                <field name="actionDelete">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="formElement" xsi:type="string">actionDelete</item>
                            <item name="label" xsi:type="string" translate="true">Unassign</item>
                        </item>
                    </argument>
                </field>
            </container>
        </dynamicRows>
        <modal name="assign_characteristic_modal">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataScope" xsi:type="string"/>
                    <item name="provider" xsi:type="string">engine_characteristic_group_form.engine_characteristic_group_form_data_source</item>
                    <item name="options" xsi:type="array">
                        <item name="title" xsi:type="string">Assign Characteristics</item>
                        <item name="buttons" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="text" xsi:type="string">Cancel</item>
                                <item name="class" xsi:type="string">action-secondary</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="targetName" xsi:type="string">${ $.name }</item>
                                        <item name="actionName" xsi:type="string">actionCancel</item>
                                    </item>
                                </item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="text" xsi:type="string" translate="true">Done</item>
                                <item name="class" xsi:type="string">action-primary</item>
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="targetName" xsi:type="string">index = assign_characteristic_grid</item>
                                        <item name="actionName" xsi:type="string">save</item>
                                    </item>
                                    <item name="1" xsi:type="array">
                                        <item name="targetName" xsi:type="string">${ $.name }</item>
                                        <item name="actionName" xsi:type="string">actionDone</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
            <insertListing name="assign_characteristic_grid">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="autoRender" xsi:type="string">false</item>
                        <item name="dataScope" xsi:type="string">assign_characteristic_grid</item>
                        <item name="ns" xsi:type="string">engine_characteristic_listing</item>
                        <item name="externalProvider" xsi:type="string">engine_characteristic_listing.engine_characteristic_listing_data_source</item>
                        <item name="selectionsProvider" xsi:type="string">engine_characteristic_listing.engine_characteristic_listing.characteristic_columns.ids</item>
                        <item name="render_url" xsi:type="url" path="mui/index/render"/>
                        <item name="realTimeLink" xsi:type="boolean">true</item>
                        <item name="dataLinks" xsi:type="array">
                            <item name="imports" xsi:type="boolean">false</item>
                            <item name="exports" xsi:type="boolean">true</item>
                        </item>
                        <item name="externalFilterMode" xsi:type="boolean">true</item>
                        <item name="cssclass" xsi:type="string">noclass</item>
                    </item>
                </argument>
            </insertListing>
        </modal>
    </fieldset>
</form>
