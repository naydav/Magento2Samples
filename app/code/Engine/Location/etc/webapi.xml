<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Region -->
    <route url="/V1/engine-location/regions" method="GET">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Engine_Location::location_region"/>
        </resources>
    </route>
    <route url="/V1/engine-location/regions/:regionId" method="GET">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Engine_Location::location_region"/>
        </resources>
    </route>
    <route url="/V1/engine-location/regions" method="POST">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Engine_Location::location_region"/>
        </resources>
    </route>
    <route url="/V1/engine-location/regions/:regionId" method="PUT">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Engine_Location::location_region"/>
        </resources>
    </route>
    <route url="/V1/engine-location/regions/:regionId" method="DELETE">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Engine_Location::location_region"/>
        </resources>
    </route>
    <!-- City -->
    <route url="/V1/engine-location/cities" method="GET">
        <service class="Engine\Location\Api\CityRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Engine_Location::location_city"/>
        </resources>
    </route>
    <route url="/V1/engine-location/cities/:cityId" method="GET">
        <service class="Engine\Location\Api\CityRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Engine_Location::location_city"/>
        </resources>
    </route>
    <route url="/V1/engine-location/cities" method="POST">
        <service class="Engine\Location\Api\CityRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Engine_Location::location_city"/>
        </resources>
    </route>
    <route url="/V1/engine-location/cities/:cityId" method="PUT">
        <service class="Engine\Location\Api\CityRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Engine_Location::location_city"/>
        </resources>
    </route>
    <route url="/V1/engine-location/cities/:cityId" method="DELETE">
        <service class="Engine\Location\Api\CityRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Engine_Location::location_city"/>
        </resources>
    </route>
</routes>
