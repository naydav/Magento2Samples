<?xml version="1.0"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">engine_location_city_form.engine_location_city_form_data_source</item>
            <item name="deps" xsi:type="string">engine_location_city_form.engine_location_city_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">City Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">engine_location_city_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">engine_location/city/</item>
                <item name="sort_order" xsi:type="number">10</item>
            </item>
            <item name="reset" xsi:type="array">
                <item name="name" xsi:type="string">reset</item>
                <item name="label" xsi:type="string" translate="true">Reset</item>
                <item name="class" xsi:type="string">reset</item>
                <item name="on_click" xsi:type="string">location.reload();</item>
                <item name="sort_order" xsi:type="number">20</item>
            </item>
            <item name="delete" xsi:type="string">Engine\Location\Ui\Component\Control\City\DeleteButton</item>
            <item name="save" xsi:type="string">Engine\Location\Ui\Component\Control\City\SaveSplitButton</item>
        </item>
    </argument>
    <dataSource name="engine_location_city_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Engine\Location\Ui\DataProvider\CityDataProvider</argument>
            <argument name="name" xsi:type="string">engine_location_city_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">main_table.city_id</argument>
            <argument name="requestFieldName" xsi:type="string">city_id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">General</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="dataScope" xsi:type="string">general</item>
                <item name="sortOrder" xsi:type="number">100</item>
            </item>
        </argument>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="max_text_length" xsi:type="number">255</item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Title</item>
                    <item name="scopeLabel" xsi:type="string" translate="true">[STORE VIEW]</item>
                    <item name="sortOrder" xsi:type="number">200</item>
                </item>
            </argument>
        </field>
        <field name="region_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Engine\Location\Model\Region\Source\Region</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string">Region</item>
                    <item name="scopeLabel" xsi:type="string" translate="true">[GLOBAL]</item>
                    <item name="sortOrder" xsi:type="number">200</item>
                </item>
            </argument>
        </field>
        <field name="is_enabled">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="label" xsi:type="string" translate="true">Is Enabled</item>
                    <item name="scopeLabel" xsi:type="string" translate="true">[GLOBAL]</item>
                    <item name="sortOrder" xsi:type="number">300</item>
                </item>
            </argument>
        </field>
        <field name="position">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-digits" xsi:type="boolean">true</item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Sort Position</item>
                    <item name="scopeLabel" xsi:type="string" translate="true">[GLOBAL]</item>
                    <item name="sortOrder" xsi:type="number">400</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
