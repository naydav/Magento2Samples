<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/category/tree" method="GET">
        <service class="Engine\CategoryTree\Api\CategoryTreeLoaderInterface" method="getTree"/>
        <resources>
            <resource ref="Engine_Category::category"/>
        </resources>
    </route>
    <route url="/V1/category/move" method="PUT">
        <service class="Engine\CategoryTree\Api\CategoryTreeMovementInterface" method="move"/>
        <resources>
            <resource ref="Engine_Category::category"/>
        </resources>
    </route>
</routes>
