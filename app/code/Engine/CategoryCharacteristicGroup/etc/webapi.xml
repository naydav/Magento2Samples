<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Category Characteristic Group Relation -->
    <route url="/V1/engine-category-characteristic-group/relations" method="GET">
        <service class="Engine\CategoryCharacteristicGroup\Api\RelationRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Engine_CategoryCharacteristicGroup::relation"/>
        </resources>
    </route>
    <route url="/V1/engine-category-characteristic-group/relations" method="POST">
        <service class="Engine\CategoryCharacteristicGroup\Api\RelationRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Engine_CategoryCharacteristicGroup::relation"/>
        </resources>
    </route>
    <route url="/V1/engine-category-characteristic-group/relations/:relationId" method="PUT">
        <service class="Engine\CategoryCharacteristicGroup\Api\RelationRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Engine_CategoryCharacteristicGroup::relation"/>
        </resources>
    </route>
    <route url="/V1/engine-category-characteristic-group/relations/:relationId" method="DELETE">
        <service class="Engine\CategoryCharacteristicGroup\Api\RelationRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Engine_CategoryCharacteristicGroup::relation"/>
        </resources>
    </route>
</routes>
