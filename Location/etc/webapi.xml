<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/location/regions" method="GET">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Engine_Location::region"/>
        </resources>
    </route>
    <route url="/V1/location/regions/:regionId" method="GET">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Engine_Location::region"/>
        </resources>
    </route>
    <route url="/V1/location/regions" method="POST">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Engine_Location::region"/>
        </resources>
    </route>
    <route url="/V1/location/regions/:regionId" method="PUT">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Engine_Location::region"/>
        </resources>
    </route>
    <route url="/V1/location/regions/:regionId" method="DELETE">
        <service class="Engine\Location\Api\RegionRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Engine_Location::region"/>
        </resources>
    </route>
</routes>
