<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Engine\Location\Api\Data\RegionInterface" type="Engine\Location\Model\Region\Region"/>
    <preference for="Engine\Location\Api\RegionRepositoryInterface" type="Engine\Location\Model\Region\RegionRepository"/>
    <preference for="Engine\Location\Api\Data\RegionSearchResultInterface" type="Magento\Framework\Api\SearchResults"/>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <!-- located in global area because magento replaces global area in arguments merging -->
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="region_listing_data_source" xsi:type="string">Engine\Location\Ui\DataProvider\RegionSearchResultCollection</item>
                <item name="region_form_data_source" xsi:type="string">Engine\Location\Ui\DataProvider\RegionSearchResultCollection</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="Engine\Location\Api\Data\RegionInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="string">engine_location_region</item>
                    <item name="identifierField" xsi:type="string">region_id</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\Operation\ExtensionPool">
        <arguments>
            <argument name="extensionActions" xsi:type="array">
                <item name="Engine\Location\Api\Data\RegionInterface" xsi:type="array">
                    <item name="read" xsi:type="array">
                        <item name="store_data_read" xsi:type="string">Engine\Location\Model\Region\Store\ReadHandler</item>
                    </item>
                    <item name="create" xsi:type="array">
                        <item name="store_data_create" xsi:type="string">Engine\Location\Model\Region\Store\SaveHandler</item>
                    </item>
                    <item name="update" xsi:type="array">
                        <item name="store_data_update" xsi:type="string">Engine\Location\Model\Region\Store\SaveHandler</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="store" xsi:type="object">Engine\Location\Ui\DataProvider\FilterApplier\StoreFilter</item>
            </argument>
        </arguments>
    </type>
    <type name="Engine\Location\Api\RegionRepositoryInterface">
        <arguments>
            <argument name="collectionProcessor" xsi:type="object">Engine\Location\Model\Api\SearchCriteria\CollectionProcessor\RegionCollectionProcessor</argument>
        </arguments>
    </type>
    <virtualType name="Engine\Location\Model\Api\SearchCriteria\CollectionProcessor\RegionCollectionProcessor"
                 type="Magento\Framework\Api\SearchCriteria\CollectionProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="joins" xsi:type="object">Engine\Location\Model\Api\SearchCriteria\CollectionProcessor\StoreDataJoinProcessor</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Engine\Location\Model\Api\SearchCriteria\CollectionProcessor\StoreDataJoinProcessor"
                 type="Magento\Framework\Api\SearchCriteria\CollectionProcessor\JoinProcessor">
        <arguments>
            <argument name="customJoins" xsi:type="array">
                <item name="region_store.title" xsi:type="object">Engine\Location\Model\Region\Api\SearchCriteria\CollectionProcessor\JoinProcessor\StoreData</item>
            </argument>
            <argument name="fieldMapping" xsi:type="array">
                <item name="title" xsi:type="string">region_store.title</item>
            </argument>
        </arguments>
    </virtualType>
</config>
